    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tron_background">

    <com.twotoasters.jazzylistview.JazzyListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
